<div class="row">
  <div class="left col-xs-7 col-sm-7 col-md-7 col-lg-7 col-xl-7">
    <li>
      <p><%= link_to recommendation.name, recommendation_path(recommendation) %></p>
      <p><%= recommendation.company %></p>
  </div>
  <div class="right col-xs-5 col-sm-5 col-md-5 col-lg-5 col-xl-5">
      <%= link_to "Edit", edit_recommendation_path(recommendation),
          class: "index btn btn-warning btn-xs", remote: true %>
      <%= link_to "Delete", recommendation_path(recommendation),
          class: "index btn btn-danger btn-xs",
          :data => { :confirm => "You sure?", :method => "Delete" } %>
    </li>
  </div>
</div>
