<h1>Skill: <%= @skill.name %></h1>
<h2>Description: <%= @skill.description %></h2>

<% if @skill.projects.any? %>
  <h4>Here are all the projects I have completed using this skill:</h4>
  <ul>
    <% @skill.projects.each do |project| %>
      <li>
        <%= link_to project.name, skill_project_path(@skill, project) %> |
        <%= project.description %> |
        <a href="<%= project.project_link %>"><%= project.project_link %></a> |
        <%= link_to "Edit", edit_skill_project_path(@skill, project) %> |
        <%= link_to "Delete", skill_project_path(@skill, project),
                                 :data => { :confirm => "You sure?",
                                            :method => "Delete" }%>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No projects have been described yet!</p>
<% end %>

<p><%= link_to "Add Project", new_skill_project_path(@skill) %></p>
<p><%= link_to "Edit Skill", edit_skill_path(@skill) %></p>
<p><%= link_to "Delete Skill", skill_path(@skill),
                         :data => { :confirm => "You sure?",
                                    :method => "Delete" }%></p>
<p><%= link_to "Return to Skills", skills_path %></p>
